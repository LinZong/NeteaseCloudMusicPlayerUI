<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#97B87BD6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="MainActivity">

    <android.support.v4.widget.NestedScrollView android:layout_width="0dp" android:layout_height="335dp"
                                                android:layout_marginBottom="16dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                android:id="@+id/LyricRecycleContainer"
                                                app:layout_constraintStart_toStartOf="parent"
    >
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LyricRecycle"
                android:background="#FFF"
                android:clipToPadding="false"/>
    </android.support.v4.widget.NestedScrollView>

    <TextView
            android:textSize="18sp"
            android:text="这是一个简单的歌词滚动Views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="下滚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ScrollNext" app:layout_constraintStart_toEndOf="@+id/ScrollBefore"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/ScrollBefore"/>
    <Button
            android:text="上滚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ScrollBefore" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/ScrollNext"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/CurrentPosition"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CurrentPosition" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TogglePlayOrPause" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/LyricRecycleContainer"/>
</android.support.constraint.ConstraintLayout>